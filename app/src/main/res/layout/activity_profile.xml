<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/newAvatartTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/new_avatar_title"
            android:textSize="18sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="26dp" />

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:columnCount="3"
            android:rowCount="2">

            <ImageView
                android:id="@+id/logoImage00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_rowSpan="1"
                android:layout_column="0"
                android:layout_columnSpan="1"
                android:onClick="SetTeamIcon"
                android:src="@drawable/ic_logo_01"
                tools:srcCompat="@drawable/ic_logo_01" />

            <ImageView
                android:id="@+id/logoImage01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_columnSpan="1"
                android:onClick="SetTeamIcon"
                android:src="@drawable/ic_logo_02"
                tools:srcCompat="@drawable/ic_logo_02" />

            <ImageView
                android:id="@+id/logoImage02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_rowSpan="1"
                android:layout_column="2"
                android:layout_columnSpan="1"
                android:onClick="SetTeamIcon"
                android:src="@drawable/ic_logo_03"
                tools:srcCompat="@drawable/ic_logo_03" />

            <ImageView
                android:id="@+id/logoImage10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_rowSpan="1"
                android:layout_column="0"
                android:layout_columnSpan="1"
                android:onClick="SetTeamIcon"
                android:src="@drawable/ic_logo_04"
                tools:srcCompat="@drawable/ic_logo_04" />

            <ImageView
                android:id="@+id/logoImage11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_rowSpan="1"
                android:layout_column="1"
                android:layout_columnSpan="1"
                android:onClick="SetTeamIcon"
                android:src="@drawable/ic_logo_05"
                tools:srcCompat="@drawable/ic_logo_05" />

            <ImageView
                android:id="@+id/logoImage12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_rowSpan="1"
                android:layout_column="2"
                android:layout_columnSpan="1"
                android:onClick="SetTeamIcon"
                android:src="@drawable/ic_logo_00"
                tools:srcCompat="@drawable/ic_logo_00" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="26dp" />

        </GridLayout>

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/new_avatar_button" />

    </LinearLayout>
</RelativeLayout>